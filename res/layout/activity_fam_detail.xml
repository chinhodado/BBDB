<!--  the top LinearLayout is only for the ads at the bottom -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/activity_fam_detail_layout">
    
<ScrollView    
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".FamDetailActivity" >

		<ProgressBar
		    android:id="@+id/progressBar1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />

	    <ImageView
	        android:id="@+id/imageView_detail_fam"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:contentDescription="Familiar image" />

	    <TextView
	        android:id="@+id/textView_detail_famName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text=""
	        android:textStyle="bold" />

	    <TextView
	        android:id="@+id/textView_dummy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="" />

	    <TextView
	        android:id="@+id/title_textView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#00508E"
	        android:gravity="center"
	        android:text="Stats"
	        android:textColor="#FFFFFF" />

	    <TableLayout
	        android:id="@+id/statTable"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:shrinkColumns="*"
	        android:stretchColumns="*" >

	        <TableRow
	            android:id="@+id/tableRow1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >

	            <TextView
	                android:id="@+id/textView5"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />

	            <TextView
	                android:id="@+id/textView4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="   HP  " />

	            <TextView
	                android:id="@+id/textView9"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="  ATK  " />

	            <TextView
	                android:id="@+id/textView6"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="  DEF  " />

	            <TextView
	                android:id="@+id/textView7"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="  WIS  " />

	            <TextView
	                android:id="@+id/textView8"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="  AGI  " />

	            <TextView
	                android:id="@+id/textView25"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text=" Total " />
	        </TableRow>

	        <View
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="@android:color/darker_gray" />

	        <TableRow
	            android:id="@+id/tableRow2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >

	            <TextView
	                android:id="@+id/textView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Base    " />

	            <TextView
	                android:id="@+id/baseHP_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/baseATK_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/baseDEF_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/baseWIS_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/baseAGI_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/baseTotal_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	        </TableRow>

	        <TableRow
	            android:id="@+id/tableRow_ATK"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >

	            <TextView
	                android:id="@+id/textView_ATK_left"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Max" />

	            <TextView
	                android:id="@+id/maxHP_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/maxATK_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/maxDEF_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/maxWIS_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/maxAGI_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/maxTotal_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	        </TableRow>

	        <TableRow
	            android:id="@+id/tableRow_AGI"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >

	            <TextView
	                android:id="@+id/textView_ATK_right"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:visibility="gone"
	                android:text="PE" />

	            <TextView
	                android:id="@+id/peHP_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/peATK_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/peDEF_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/peWIS_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/peAGI_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />

	            <TextView
	                android:id="@+id/peTotal_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="" />
	        </TableRow>

	    </TableLayout>

	    <TextView
	        android:id="@+id/textView10"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#6b0c00"
	        android:gravity="center"
	        android:text="Skill"
	        android:textColor="#FFFFFF" />
	    
	    <ProgressBar
		    android:id="@+id/progressBar2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />

	    <TableLayout
	        android:id="@+id/skillTable"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TableRow
	            android:id="@+id/tableRow5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	        </TableRow>
	    </TableLayout>
	    
	    <TextView
	        android:id="@+id/textViewSpecialInformationLabel"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#2C001E"
	        android:gravity="center"
	        android:text="Special Information"
	        android:textColor="#FFFFFF"
	        android:visibility="gone" />
	    
	    <TextView
	        android:id="@+id/textViewSpecialInformation"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:text="\n"
	        android:visibility="gone" />

	    <TextView
	        android:id="@+id/textView11"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#009E60"
	        android:gravity="center"
	        android:text="Details"
	        android:textColor="#FFFFFF" />

	    <TableLayout
	        android:id="@+id/detailTable"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	    </TableLayout>
	    
	    <ProgressBar
		    android:id="@+id/progressBar3"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />

	    <TextView
	        android:id="@+id/textView_dummy2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />

	    <TextView
	        android:id="@+id/TextView01"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#000000"
	        android:gravity="center"
	        android:text="Evolution Line"
	        android:textColor="#FFFFFF" />
	    
	    <TableLayout
	        android:id="@+id/evoTable"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	    </TableLayout>

	</LinearLayout>
    
</ScrollView>

<com.google.android.gms.ads.AdView
    android:id="@+id/adView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    ads:adSize="BANNER"
    ads:adUnitId="ca-app-pub-8564595162671342/6899412910" />

</LinearLayout>